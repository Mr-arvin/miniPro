<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-dots="true">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>
<view class='items-list'>
  <view class='pro-item'>
    <image class='pro-logo' src='/images/pro_01.jpg'></image>
    <view class='pro-body'>
      <view class='pro-title'>饮水知识</view>
      <text>如何正确的饮水，什么是健康的水</text>
      <view class='pro-footer'>
        <image class='btn-detail' src='/images/btn_detail.png'></image>
        <image class='btn-ask' src='/images/btn_ask.png'></image>
      </view>
    </view>
  </view>
</view>